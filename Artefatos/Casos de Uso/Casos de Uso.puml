@startuml
left to right direction
skinparam actorStyle awesome
skinparam usecase {
  BackgroundColor #F9F9F9
  BorderColor #333
  ArrowColor #666
}

' === Atores ===
actor "Deputada" as A1
actor "Chefe de Gabinete" as A2
actor "Gestora" as A3
actor "Gestora de Demandas" as A4
actor "Atendimento" as A5
actor "Funcionários" as A6

' === Casos de Uso Gerais ===
usecase "1. Autenticação Sistema" as UC_Auth
usecase "2 Validar Perfil" as UC_ValidarPerfil

UC_Auth --> UC_ValidarPerfil : <<include>>

' === Cadastros ===
package "Cadastros" {
  usecase "3. Cadastrar Instituição" as UC_CadInst
  usecase "4. Consultar Instituição" as UC_ConsInst
  usecase "5. Cadastrar Liderança" as UC_CadLid
  usecase "6. Consultar Lideranças" as UC_ConsLid
  usecase "7. Cadastrar Informações da Cidade" as UC_CadCid
  usecase "8. Consultar Cidades" as UC_ConsCid
  usecase "9. Cadastrar Igreja" as UC_CadIgreja
  usecase "10. Consultar Igrejas" as UC_ConsIgreja
}

' === Gestão de Conteúdo do Site ===
package "Gestão de Conteúdo do Site" {
  usecase "11. Cadastrar Notícias" as UC_CadNot
  usecase "12. Consultar Notícias" as UC_ConsNot
  usecase "13. Atualizar Missão" as UC_Missao
  usecase "14. Atualizar Trajetória" as UC_Trajetoria
  usecase "15. Cadastrar Projetos" as UC_CadProjSite
  usecase "16. Consultar Projetos" as UC_ConsProjSite
}

' === Projetos de Lei ===
package "Projetos de Lei" {
  usecase "17. Cadastrar Projetos de Lei" as UC_CadPL
  usecase "18. Atualizar Status dos Projetos de Lei" as UC_AtualPL
  usecase "19. Consultar Projetos de Lei" as UC_ConsPL
  usecase "20. Gerar Relatório de Projetos" as UC_RelPL
}

' === Gestão de Emendas ===
package "Gestão de Emendas" {
  usecase "21. Cadastrar Emenda" as UC_CadEmenda
  usecase "22. Atualizar Status da Emenda" as UC_AtualEmenda
  usecase "23. Gerar Relatório por Cidade" as UC_RelCid
  usecase "24. Gerar Relatório por Área" as UC_RelArea
  usecase "25. Visualizar Gráficos" as UC_Graficos
  usecase "26. Consultar Emendas" as UC_ConsEmendas
}

' === Gestão de Demandas ===
package "Gestão de Demandas" {
  usecase "27. Anexar Ofício" as UC_Oficio
  usecase "28. Atualizar Status da Demanda" as UC_AtualDemanda
  usecase "29. Consultar Demandas" as UC_ConsDemanda
  usecase "30. Atribuir Responsável" as UC_AtribResp
  usecase "31. Registrar Pessoa Atendida" as UC_RegPessoa
  usecase "32. Definir Prazo" as UC_DefPrazo
  usecase "Aux. Abrir Demanda" as UC_AbrirDemanda
  usecase "Aux. Enviar Notificação" as UC_Notificacao
}

' Relações include/extend em Demandas
UC_Oficio .> UC_RegPessoa : <<extend>>
UC_Oficio .> UC_DefPrazo : <<extend>>
UC_Oficio .> UC_AtribResp : <<extend>>
UC_Oficio --> UC_AbrirDemanda : <<include>>
UC_AtualDemanda --> UC_Notificacao : <<include>>
UC_AtribResp --> UC_Notificacao : <<include>>

' === Gestão da Agenda ===
package "Gestão da Agenda" {
  usecase "33. Cadastrar Evento" as UC_Evento
  usecase "34. Visualizar Calendário" as UC_Calendario
  usecase "35. Criar Alerta/Lembrete" as UC_Alerta
  usecase "Aux. Vincular Contexto ao Evento" as UC_Contexto
  usecase "Aux. Detectar Conflitos" as UC_Conflitos
}

UC_Evento .> UC_Contexto : <<extend>>
UC_Evento --> UC_Conflitos : <<include>>
UC_Alerta --> UC_Notificacao : <<include>>

' === Relatórios ===
package "Relatórios" {
  usecase "36. Gerar Relatório Consolidado" as UC_RelConsolidado
}

